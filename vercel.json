{
	"builds": [
		{
			"src": "main.py",
			"use": "@vercel/python",
			"config": { 
				"maxLambdaSize": "15mb"
			}
		},
		{
			"src": "build_files.sh",
			"use": "@vercel/static-build",
			"config": {
				"distDir": "staticfiles_build"
			}
		}
	],
	"routes": [
		{
			"src": "/static/(.*)",
			"dest": "/static/$1"
		},
		{
			"src": "/book/download",
			"dest": "api/upload.py"
		},
		{
			"src": "/(.*)",
			"dest": "main.py"
		}
	]
	
}